import React from 'react'

const App = () => {
  const course = 'Half Stack application development'
  const parts = [
    {
      name: 'Fundamentals of React',
      exercises: 10
    },
    {
      name: 'Using props to pass data',
      exercises: 7
    },
    {
      name: 'State of a component',
      exercises: 14
    }
  ]

  const Header = (props) => {
    return (
      <div>
        <h1>{props.kurssi}</h1>
      </div>
    )
  }

  const Total = (props) => {
    const {exe} = props
    return (
      <div>
        <p>
            {exe[0].exercises + exe[1].exercises + exe[2].exercises}
        </p>
      </div>
    )
  }

  const Content = (props) => {
    const {lista} = props
    return (
      <div>
        <p>{lista[0].name} {lista[0].exercises}</p>
        <p>{lista[1].name} {lista[1].exercises}</p>
        <p>{lista[2].name} {lista[2].exercises}</p>
      </div>
    )
  }

  return (
    <div>
      <Header kurssi={course} />
      <Total exe={parts} />
      <Content lista={parts} />
    </div>
  )
}

export default App;
